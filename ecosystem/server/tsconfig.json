{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": true,
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@usecases/*": ["./src/usecases/*"],
      "@shared/*": ["./src/shared/*"],
      "@external/*": ["./src/external/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@main/*": ["./src/main/*"],
    }
  }, 
  "include": ["src/**/*"],
  "exclude": [
    "jest.*",
    "jest-*",
    "./coverage", 
    "node_modules", 
    "dist"
  ]
}
