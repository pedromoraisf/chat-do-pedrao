{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true, 
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@usecases/*": ["./src/usecases/*"],
      "@shared/*": ["./src/shared/*"],
      "@external/*": ["./src/external/*"],
      "@main/*": ["./src/main/*"],
    }
  }, 
  "exclude": [
    "jest.*",
    "jest-*",
    "./coverage", 
    "node_modules", 
    "dist"
  ]
}
